<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ffdbdbdb"
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
            android:id="@+id/rl_home_top"
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="44dip"
            >
        <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@+id/ibtn_setting"
                android:background="#ffdbdbdb"
                android:paddingRight="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_set"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        <!--<ImageView android:paddingLeft="10.0dip"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/ic_title"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_centerVertical="true"/>-->
    </RelativeLayout>
    <TableLayout
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
        <!--android:layout_below="@id/rl_home_top"-->
        <TableRow
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
            <RelativeLayout
                    android:id="@+id/layout_image_explore"
                    android:background="@drawable/btn_home_navi"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:clickable="true"
                    android:layout_weight="1.0">
                <ImageView
                        android:layout_height="44dip"
                        android:layout_width="44dip"
                        android:src="@drawable/iv_fav"
                        android:id="@+id/img_0"
                        android:layout_centerInParent="true"
                        ></ImageView>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="图片浏览"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:padding="8dip"
                        android:layout_below="@+id/img_0"
                        android:layout_centerHorizontal="true"
                        ></TextView>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/iv_home_search"
                    android:background="@drawable/btn_home_search"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="USB已连接"
                        android:layout_centerInParent="true"
                        ></TextView>
                <!--<ImageView-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:src="@drawable/iv_fav"-->
                <!--android:id="@+id/img_0"-->
                <!--android:layout_centerInParent="true"-->
                <!--></ImageView>-->
            </RelativeLayout>
        </TableRow>
        <TableRow
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
            <RelativeLayout
                    android:id="@+id/layout_file_explore"
                    android:background="@drawable/btn_home_map"
                    android:layout_width="0.0dip"
                    android:clickable="true"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">
                <ImageView
                        android:layout_height="44dip"
                        android:layout_width="44dip"
                        android:src="@drawable/iv_navi"
                        android:id="@+id/img_0"
                        android:layout_centerInParent="true"
                        ></ImageView>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="文件浏览"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:padding="8dip"
                        android:layout_below="@+id/img_0"
                        android:layout_centerHorizontal="true"
                        ></TextView>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/iv_home_near"
                    android:background="@drawable/btn_home_near"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">
                <!--<ImageView-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:src="@drawable/iv_navi"-->
                <!--android:id="@+id/img_0"-->
                <!--android:layout_centerInParent="true"-->
                <!--></ImageView>-->
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="SDCard可用"
                        android:layout_centerInParent="true"
                        ></TextView>

            </RelativeLayout>
        </TableRow>
        <TableRow
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
            <RelativeLayout
                    android:id="@+id/layout_internet_explore"
                    android:background="@drawable/btn_home_favor"
                    android:layout_width="0.0dip"
                    android:clickable="true"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">
                <ImageView
                        android:layout_height="44dip"
                        android:layout_width="44dip"
                        android:src="@drawable/iv_map"
                        android:id="@+id/img_0"
                        android:layout_centerInParent="true"
                        ></ImageView>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="网络浏览"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:padding="8dip"
                        android:layout_below="@+id/img_0"
                        android:layout_centerHorizontal="true"
                        ></TextView>
            </RelativeLayout>
            <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/iv_home_asr"
                    android:background="@drawable/btn_home_more"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">
                <!--<ImageView-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:src="@drawable/iv_map"-->
                <!--android:id="@+id/img_0"-->
                <!--android:layout_centerInParent="true"-->
                <!--></ImageView>-->
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="WiFi已连接"
                        android:layout_centerInParent="true"
                        ></TextView>

            </RelativeLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>