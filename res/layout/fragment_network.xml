<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_height="44dip"
            android:layout_width="match_parent"
            android:background="#cccccc"
            >
        <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:text="Network"
                android:paddingLeft="8dip"
                android:paddingRight="4dip"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                ></TextView>
        <RadioGroup
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Wired network"
                    ></RadioButton>
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Wireless network"
                    ></RadioButton>
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Device hotspot"
                    ></RadioButton>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
        <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:text="WLAN"
                android:paddingLeft="8dip"
                android:paddingRight="4dip"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                ></TextView>
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                >
            <Button
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Selet nearby WLAN"
                    ></Button>
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    >
                <Button
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:text="Automatic access IP address"
                        android:layout_weight="1"
                        ></Button>
                <Button
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:text="Manually set IP address"
                        ></Button>
            </LinearLayout>
            <Button
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Wifi Not Connected"
                    ></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>