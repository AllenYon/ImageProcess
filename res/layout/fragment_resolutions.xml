<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_height="44dip"
            android:layout_width="match_parent"
            android:background="#cccccc"
            >
        <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:text="VGA"
                android:paddingLeft="8dip"
                android:paddingRight="4dip"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                ></TextView>
        <RadioGroup
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="720P"
                    ></RadioButton>
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1024*768"
                    ></RadioButton>
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1280*1024"
                    ></RadioButton>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
            android:layout_height="44dip"
            android:layout_width="match_parent"
            >
        <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:text="HDMI"
                android:paddingLeft="8dip"
                android:paddingRight="4dip"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                ></TextView>
        <RadioGroup
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="720P"
                    ></RadioButton>
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1024*768"
                    ></RadioButton>
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1280*1024"
                    ></RadioButton>
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1080P@25"
                    ></RadioButton>
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1080P@60"
                    ></RadioButton>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
            android:layout_height="44dip"
            android:layout_width="match_parent"
            android:background="#cccccc"
            >
        <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:text="CVBS"
                android:paddingLeft="8dip"
                android:paddingRight="4dip"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                ></TextView>
        <RadioGroup
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="NTSC"
                    ></RadioButton>
            <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="PAL"
                    ></RadioButton>
        </RadioGroup>

    </LinearLayout>
</LinearLayout>