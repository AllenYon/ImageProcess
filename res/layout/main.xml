<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >
    <RelativeLayout
            android:id="@+id/layout_base_contain"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >
        <ImageView
                android:id="@+id/img_main"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                ></ImageView>
        <RelativeLayout
                android:id="@+id/layout_effect_contain"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >
        </RelativeLayout>
    </RelativeLayout>
    <com.link.widget.ScrollableBottomBar
            android:id="@+id/scrollable_left"
            android:layout_height="match_parent"
            android:layout_width="48dip"
            android:orientation="vertical"
            >
        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="48dip"
                android:background="#2000"
                android:orientation="vertical"
                >
            <Button
                    android:id="@+id/btn_pick"
                    android:layout_height="44dip"
                    android:layout_width="match_parent"
                    android:text="選擇"
                    android:textSize="12sp"
                    ></Button>

            <Button
                    android:id="@+id/btn_rotate"
                    android:layout_height="44dip"
                    android:layout_width="match_parent"
                    android:text="旋轉"
                    android:textSize="12sp"
                    ></Button>

            <Button
                    android:id="@+id/btn_paint"
                    android:layout_height="44dip"
                    android:layout_width="match_parent"
                    android:text="畫筆"
                    android:textSize="12sp"
                    ></Button>
            <Button
                    android:id="@+id/btn_erase"
                    android:layout_height="44dip"
                    android:layout_width="match_parent"
                    android:text="擦寫"
                    android:textSize="12sp"
                    ></Button>
            <Button
                    android:id="@+id/btn_annotation"
                    android:layout_height="44dip"
                    android:layout_width="match_parent"
                    android:text="批註"
                    android:textSize="12sp"
                    ></Button>
            <Button
                    android:id="@+id/btn_take_photo"
                    android:layout_height="44dip"
                    android:layout_width="match_parent"
                    android:text="拍照"
                    android:textSize="12sp"
                    ></Button>

            <Button
                    android:id="@+id/btn_highlight"
                    android:layout_height="44dip"
                    android:layout_width="match_parent"
                    android:text="高亮"
                    android:textSize="12sp"
                    ></Button>

            <Button
                    android:id="@+id/btn_conver"
                    android:layout_height="44dip"
                    android:layout_width="match_parent"
                    android:text="遮罩"
                    android:textSize="12sp"
                    ></Button>

            <Button
                    android:id="@+id/btn_compare"
                    android:layout_height="44dip"
                    android:layout_width="match_parent"
                    android:text="对比"
                    android:textSize="12sp"
                    ></Button>
            <ToggleButton
                    android:id="@+id/btn_pip"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textOn="开"
                    android:textOff="关"
                    ></ToggleButton>
        </LinearLayout>
    </com.link.widget.ScrollableBottomBar>
    <com.link.widget.ScrollableBottomBar
            android:id="@+id/scrollable_right"
            android:layout_height="match_parent"
            android:layout_width="48dip"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            >
        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="48dip"
                android:background="#2000"
                android:orientation="vertical"
                >
            <Button
                    android:id="@+id/btn_save"
                    android:layout_height="44dip"
                    android:layout_width="match_parent"
                    android:text="保存"
                    android:textSize="12sp"
                    ></Button>
        </LinearLayout>
    </com.link.widget.ScrollableBottomBar>
    <ToggleButton
            android:id="@+id/tbtn_toolbar"
            android:layout_height="44dip"
            android:layout_width="wrap_content"
            android:textOn="工具条显示"
            android:textOff="工具条隐藏"
            android:checked="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ></ToggleButton>

</RelativeLayout>

